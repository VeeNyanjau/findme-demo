<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyber_black"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIGURATION"
            android:textSize="14sp"
            android:letterSpacing="0.2"
            android:textColor="@color/neon_blue"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDENTITY &amp; NETWORK"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="32dp"/>

        <!-- User Handle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY USER ID (FIXED)"
            android:textSize="12sp"
            android:textColor="@color/deep_sky_blue"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvMyHandle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generating..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:background="#20FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY PHONE NUMBER"
            android:textSize="12sp"
            android:textColor="@color/deep_sky_blue"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etMyPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+1 234 567 890 (Required)"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_white"
            android:backgroundTint="@color/deep_sky_blue"
            android:inputType="phone"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- Community Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMUNITY ACCESS"
            android:textSize="12sp"
            android:textColor="@color/deep_sky_blue"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Name"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etCommunityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. FamilyGroup"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_white"
            android:backgroundTint="@color/deep_sky_blue"
            android:inputType="textCapWords"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnJoin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="JOIN EXISTING"
                android:backgroundTint="#333333"
                android:textColor="@color/text_white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CREATE NEW"
                android:backgroundTint="@color/deep_sky_blue"
                android:textColor="@color/cyber_black"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- Contact Section (Optional) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACKUP CONTACT (OPTIONAL)"
            android:textSize="12sp"
            android:textColor="@color/deep_sky_blue"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etEmergencyPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+254 700 000000 (Optional)"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_white"
            android:backgroundTint="@color/deep_sky_blue"
            android:inputType="phone"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>
