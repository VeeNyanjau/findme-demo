<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyber_black"
    android:padding="24dp">

    <!-- Top Section -->
    <ImageView
        android:id="@+id/ivAppIcon"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/app_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.3"/>

    <TextView
        android:id="@+id/tvStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYSTEM STATUS"
        android:textSize="12sp"
        android:letterSpacing="0.2"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivAppIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTIVE // MONITORING"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textColor="@color/success_green"
        android:background="#2000FF99"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatusLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvContactInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="COMMUNITY: ..."
        android:textAlignment="center"
        android:textColor="@color/text_white"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dynamic SOS Button Section -->
    <!-- Constrained between Contact Info and Bottom Footer -->
    <Button
        android:id="@+id/btnTestAlert"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="ALERT\nCOMMUNITY"
        android:textSize="24sp"
        android:textStyle="bold"
        android:backgroundTint="@color/alert_red"
        android:textColor="#FFFFFF"
        android:elevation="12dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintTop_toBottomOf="@id/tvContactInfo"
        app:layout_constraintBottom_toTopOf="@id/btnEditContacts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45"/>

    <!-- Bottom Section -->
    <Button
        android:id="@+id/btnEditContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ MODIFY CONFIGURATION ]"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/deep_sky_blue"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/tvFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SECURE LINE // ENCRYPTED"
        android:textSize="10sp"
        android:textColor="@color/text_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
